<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="AirPanelLinearLayout">
        <attr name="airPanelMinHeight" format="dimension" />
        <attr name="airPanelMaxHeight" format="dimension" />
    </declare-styleable>


    <!-- 圆角策略   start-->
    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="riv_corner_radius" format="dimension" />
        <attr name="riv_corner_radius_top_left" format="dimension" />
        <attr name="riv_corner_radius_top_right" format="dimension" />
        <attr name="riv_corner_radius_bottom_left" format="dimension" />
        <attr name="riv_corner_radius_bottom_right" format="dimension" />
        <attr name="riv_border_width" format="dimension" />
        <attr name="riv_border_color" format="color" />
        <attr name="riv_mutate_background" format="boolean" />
        <attr name="riv_oval" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="riv_tile_mode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_x">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_y">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
    </declare-styleable>
    <!-- 圆角策略   en'd-->


    <declare-styleable name="ProgressWheel">
        <attr name="text" format="string" />
        <attr name="textcolorprogress" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="barColor" format="color" />
        <attr name="rimColor" format="color" />
        <attr name="rimWidth" format="dimension" />
        <attr name="spinSpeed" format="dimension" />
        <attr name="delayMillis" format="integer" />
        <attr name="circleColor" format="color" />
        <attr name="radius" format="dimension" />
        <attr name="barWidth" format="dimension" />
        <attr name="circlebarLength" format="dimension" />
    </declare-styleable>
    <declare-styleable name="PieProgress">
        <attr name="foregroundColor" format="color" />
        <attr name="backgroundColor" format="color" />
    </declare-styleable>


    <declare-styleable name="MarqueeViewStyle">
        <attr name="mvInterval" format="integer|reference" />
        <attr name="mvAnimDuration" format="integer|reference" />
        <attr name="mvTextSize" format="dimension|reference" />
        <attr name="mvTextColor" format="color" />
        <attr name="mvSingleLine" format="boolean" />
        <attr name="mvGravity">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="mvDirection">
            <enum name="bottom_to_top" value="0" />
            <enum name="top_to_bottom" value="1" />
            <enum name="right_to_left" value="2" />
            <enum name="left_to_right" value="3" />
        </attr>
    </declare-styleable>


    <declare-styleable name="UnderlinedTextView">
        <attr name="underlineWidth" format="dimension" />
        <attr name="underlineColor" format="color" />
    </declare-styleable>

    <declare-styleable name="circleProgressBar">
        <attr name="circleWidth" format="dimension" />
        <attr name="betaAngle" format="integer" />
        <attr name="firstColor" format="color" />
        <attr name="secondColor" format="color" />
        <attr name="progress" format="integer" />
        <attr name="showText" format="boolean" />
    </declare-styleable>


    <!-- 表格的基础样式配置-->
    <declare-styleable name="TabaleViewStyle">

        <!--表格头的宽高-->
        <attr name="table_head_cell_width" format="dimension"></attr>
        <attr name="table_head_cell_height" format="dimension"></attr>

        <!--表格内容的宽高-->
        <attr name="table_content_cell_width" format="dimension"></attr>
        <attr name="table_content_cell_height" format="dimension"></attr>

        <!--单独配置 表头和 表内容的宽高 优先级最高-->
        <attr name="table_cells_width" format="dimension"></attr>
        <attr name="table_cells_height" format="dimension"></attr>

        <!--表格的分割线高度-->
        <attr name="table_devider_height" format="dimension"></attr>
        <!--表格的分割线颜色-->
        <attr name="table_devider_color" format="color"></attr>
        <!--是否自适应内容高度-->
        <attr name="table_auto_wrap_height" format="boolean"></attr>
        <!--是否显示表格头-->
        <attr name="table_visible_head" format="boolean"></attr>
        <!--是否形成闭环演示-->
        <attr name="table_close_cycle" format="boolean"></attr>

    </declare-styleable>


    <declare-styleable name="mySwitchButton">
        <!-- 圆角矩形的边颜色-->
        <attr name="strokeLineColor" format="color" />
        <!--圆角矩形的填充颜色-->
        <attr name="strokeSolidColor" format="color" />
        <!--内部小圆被选中的颜色-->
        <attr name="circleCheckedColor" format="color" />
        <!--内部小圆未被选中的颜色-->
        <attr name="circleNoCheckedColor" format="color" />
        <!--圆外边颜色-->
        <attr name="circleStrokeColor" format="color" />
        <!--滑动圆选择状态下的填充颜色-->
        <attr name="strokeNoCheckedSolidColor" format="color" />
        <!--椭圆的边框宽度-->
        <attr name="strokeLineWidth" format="dimension" />
        <!--圆的边框宽度-->
        <attr name="circleStrokeWidth" format="dimension" />
        <!--是否显示大圆-->
        <attr name="isBigCircle" format="boolean" />
        <!--是否选中状态-->
        <attr name="isChecked" format="boolean" />
    </declare-styleable>


    <!--   常用dialog 的属性-->
    <style name="mOftenDialog">
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 去除黑色边框的关键设置项 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 屏幕背景是否变暗 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="loading_style">
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 去除黑色边框的关键设置项 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 屏幕背景是否变暗 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>


    <!-- 有边框和背景的菜单View -->
    <declare-styleable name="MultiFunctionView">
        <attr name="strokeWidth" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="strokeColor" format="color|reference" />
        <attr name="normalBgColor" format="color|reference" />
        <attr name="pressedBgColor" format="color|reference" />
        <attr name="followTextColor" format="boolean" />
        <attr name="normalTextColor" format="color|reference" />
        <attr name="pressedTextColor" format="color|reference" />

        <attr name="showAnimation" format="boolean" />


        <attr name="radius_type">
            <enum name="left_top_bottom_radius" value="0" />
            <enum name="right_top_bootom_radius" value="1" />

            <enum name="left_top_radius" value="2" />
            <enum name="left_bottom_radius" value="3" />
            <enum name="right_top_radius" value="4" />

            <enum name="right_bootom_radius" value="5" />
            <enum name="all_radius" value="6" />
            <enum name="none_radius" value="7" />
        </attr>

    </declare-styleable>


    <!-- 有边框和背景的View -->
    <declare-styleable name="FilletView">
        <attr name="f_strokeWidth" format="dimension" />
        <attr name="f_cornerRadius" format="dimension" />
        <attr name="f_strokeColor" format="color|reference" />
        <attr name="f_normalBgColor" format="color|reference" />
        <attr name="f_pressedBgColor" format="color|reference" />
        <attr name="f_followTextColor" format="boolean" />
        <attr name="f_normalTextColor" format="color|reference" />
        <attr name="f_pressedTextColor" format="color|reference" />
        <attr name="f_showAnimation" format="boolean" />


        <attr name="f_radius_type">
            <enum name="f_left_top_bottom_radius" value="0" />
            <enum name="f_right_top_bootom_radius" value="1" />

            <enum name="f_left_top_radius" value="2" />
            <enum name="f_left_bottom_radius" value="3" />
            <enum name="f_right_top_radius" value="4" />

            <enum name="f_right_bootom_radius" value="5" />
            <enum name="f_all_radius" value="6" />
            <enum name="f_none_radius" value="7" />
        </attr>
    </declare-styleable>


    <attr name="progressTextSize" format="dimension" />
    <attr name="progressTextColor" format="color" />
    <attr name="progressTextOffset" format="dimension" />
    <attr name="progressNormalColor" format="color" />
    <attr name="progressReachColor" format="color" />
    <attr name="progressNormalSize" format="dimension" />
    <attr name="progressReachSize" format="dimension" />
    <attr name="progressReachWidth" format="dimension" />
    <attr name="progressNormalWidth" format="dimension" />
    <attr name="progressTextVisible" format="boolean" />
    <attr name="progressTextSkewX" format="dimension" />
    <attr name="progressTextPrefix" format="string" />
    <attr name="progressTextSuffix" format="string" />
    <attr name="innerBackgroundColor" format="color" />

    <declare-styleable name="HorizontalProgressView">
        <attr name="progressNormalColor" />
        <attr name="progressReachColor" />
        <attr name="progressTextColor" />
        <attr name="progressTextSize" />
        <attr name="progressTextOffset" />
        <attr name="progressNormalSize" />
        <attr name="progressReachSize" />
        <attr name="progressTextPosition" format="enum">
            <enum name="TOP" value="1" />
            <enum name="BOTTOM" value="-1" />
            <enum name="CENTER" value="0" />
        </attr>
        <attr name="progressTextVisible" />
        <attr name="progressTextSkewX" />
        <attr name="progressTextPrefix" />
        <attr name="progressTextSuffix" />
    </declare-styleable>

    <declare-styleable name="CircleProgressView">
        <attr name="progressNormalColor" />
        <attr name="progressReachColor" />
        <attr name="progressTextColor" />
        <attr name="progressTextSize" />
        <attr name="progressTextOffset" />
        <attr name="progressNormalSize" />
        <attr name="progressReachSize" />
        <attr name="progressRadius" format="dimension" />
        <attr name="progressTextVisible" />
        <attr name="progressStartArc" format="integer" />
        <attr name="progressTextSkewX" />
        <attr name="progressTextPrefix" />
        <attr name="progressTextSuffix" />
        <attr name="innerBackgroundColor" />
        <attr name="progressStyle" format="enum">
            <enum name="Normal" value="0" />
            <enum name="FillInner" value="1" />
            <enum name="FillInnerArc" value="2" />
        </attr>
        <attr name="innerProgressColor" format="color" />
        <attr name="innerPadding" format="dimension" />
        <attr name="outerColor" format="color" />
        <attr name="outerSize" format="dimension" />
        <attr name="reachCapRound" format="boolean" />
    </declare-styleable>


    <!--自定义耗电排行电池View的自定义属性-->
    <declare-styleable name="PowerBatteryView">
        <!-- 手表低电时候的电池颜色 -->
        <attr name="batteryLowerPowerColor" format="color" />
        <!-- 手表在线时候的电池颜色 -->
        <attr name="batteryOnlineColor" format="color" />
        <!-- 手表离线时候的电池颜色 -->
        <attr name="batteryOfflineColor" format="color" />
        <!--  电池最大高度 -->
        <attr name="batteryLevelMaxHeight" format="integer" />
        <!--  电池宽度 -->
        <attr name="batteryLevelWidth" format="integer" />
        <!--  外壳的相关信息 -->
        <attr name="batteryShellCornerRadius" format="dimension" />
        <attr name="batteryShellWidth" format="dimension" />
        <attr name="batteryShellHeight" format="dimension" />
        <attr name="batteryShellStrokeWidth" format="dimension" />
        <!--  电池头的相关信息 -->
        <attr name="batteryShellHeadCornerRadius" format="dimension" />
        <attr name="batteryShellHeadWidth" format="dimension" />
        <attr name="batteryShellHeadHeight" format="dimension" />
        <!-- 电池外壳和电池等级直接的间距 -->
        <attr name="batteryGap" format="dimension" />
    </declare-styleable>

    <declare-styleable name="Gif_ImageView">
        <!--gif文件引用-->
        <attr name="gif_src" format="reference" />
        <!--是否加载完自动播放-->
        <attr name="auth_play" format="boolean" />
        <!--播放次放，默认永远播放-->
        <attr name="play_count" format="integer" />
        <!--播放完成后是否停留在最后一帧，默认false-->
        <attr name="end_last_frame" format="boolean" />
    </declare-styleable>


    <!--注意这里的name要和自定义View的名称一致，不然在xml布局中无法引用-->
    <declare-styleable name="CircleBarView">
        <attr name="progress_color" format="color"></attr>
        <attr name="bg_color" format="color"></attr>

        <attr name="bar_width" format="dimension"></attr>

        <attr name="start_angle" format="float"></attr>
        <attr name="sweep_angle" format="float"></attr>
    </declare-styleable>

</resources>