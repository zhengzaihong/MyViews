<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cadetblue"
    android:orientation="vertical"
    android:padding="@dimen/len_10">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rivChangeRPoint4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

    </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <dz.solc.viewtool.view.menueview.SwitchButton
            android:id="@+id/sbutton"
            android:layout_width="@dimen/len_100"
            android:layout_height="@dimen/len_40"
            app:circleCheckedColor="@color/green_200"
            app:circleNoCheckedColor="@color/gray"
            app:circleStrokeWidth="@dimen/len_2"
            app:strokeLineColor="@color/green_200"
            app:strokeLineWidth="@dimen/len_1"
            app:strokeNoCheckedSolidColor="@color/trans"
            app:strokeSolidColor="@color/colorAccent" />

        <dz.solc.viewtool.view.menueview.SwitchButton
            android:layout_width="@dimen/len_100"
            android:layout_height="@dimen/len_40"
            android:layout_marginTop="@dimen/len_10"
            app:circleCheckedColor="@color/green_200"
            app:circleNoCheckedColor="@color/gray"
            app:circleStrokeColor="@color/gray"
            app:circleStrokeWidth="@dimen/len_0"
            app:isBigCircle="true"
            app:isChecked="true"
            app:strokeLineColor="@color/line_color"
            app:strokeLineWidth="@dimen/len_1"
            app:strokeNoCheckedSolidColor="@color/white"
            app:strokeSolidColor="@color/white" />


        <dz.solc.viewtool.view.menueview.MultiFunctionView
            android:layout_width="@dimen/len_80"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_15"
            android:gravity="center"
            android:text="菜单1"
            app:cornerRadius="@dimen/len_15"
            app:followTextColor="false"
            app:normalBgColor="@color/red_50"
            app:normalTextColor="@color/red"
            app:pressedBgColor="@color/green"
            app:pressedTextColor="@color/red"
            app:radius_type="all_radius"
            app:showAnimation="false"
            app:strokeColor="@color/white"
            app:strokeWidth="@dimen/len_1" />


        <dz.solc.viewtool.view.textview.GradientTextView
            android:id="@+id/gtTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:textSize="@dimen/len_30"
            android:textStyle="bold"
            app:gradient_orientation="vertical"
            app:gradient_drawable="@drawable/selector" />


        <dz.solc.viewtool.view.editview.FilletEditView
            android:layout_width="@dimen/len_80"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_15"
            android:gravity="center"
            android:hint="asdfasf"
            android:text="菜单1"

            app:e_normalTextColor="@color/green"
            app:e_pressedTextColor="@color/green"
            app:e_cornerRadius="@dimen/len_30"
            app:e_radius_type="e_all_radius"
            app:e_normalBgColor="@color/white"
            app:e_pressedBgColor="@color/white"
            app:e_normalStrokeWidth="@dimen/len_1"
            app:e_pressStrokeWidth="@dimen/len_1"
            app:e_normalStrokeColor="@color/black_alpha_128"
            app:e_pressStrokeColor="@color/purple" />


        <dz.solc.viewtool.view.editview.FilletEditView
            android:layout_width="@dimen/len_80"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_15"
            android:gravity="center"
            android:hint="asdfasf"
            android:text="菜单1"
            app:e_cornerRadius="@dimen/len_30"
            app:e_radius_type="e_all_radius"
            app:e_normalBgColor="@color/red_400"
            app:e_pressedBgColor="#029CFD" />



        <android.support.v7.widget.RecyclerView
            android:id="@+id/rivChangeRPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/len_10">

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rivChangeRPoint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/len_10">

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rivChangeRPoint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/len_10">

        </android.support.v7.widget.RecyclerView>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rivChangeRPoint3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/len_10">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</RelativeLayout>