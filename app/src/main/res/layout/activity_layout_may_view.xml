<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/len_10">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <dz.solc.viewtool.view.mayview.PowerBatteryView
            android:id="@+id/PowerBatteryView"
            android:layout_width="@dimen/len_23"
            app:batteryLowerPowerColor="@color/green"
            app:batteryShellHeadHeight="5dp"
            android:layout_height="@dimen/len_40" />

        <TextView
            android:id="@+id/tvBtNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="50"
            android:textSize="@dimen/font_10" />

    </RelativeLayout>


    <dz.solc.viewtool.view.textview.FilletView
        android:id="@+id/button"
        android:layout_width="@dimen/len_100"
        android:layout_height="@dimen/len_30"
        android:layout_marginLeft="@dimen/len_10"
        android:layout_marginTop="@dimen/len_10"
        android:layout_marginRight="@dimen/len_10"
        android:gravity="center"
        android:text="菜单1"
        app:f_cornerRadius="@dimen/len_10"
        app:f_normalBgColor="@color/light_blue_200"
        app:f_normalTextColor="@color/black_alpha_224"
        app:f_pressedBgColor="@color/yellow"
        app:f_pressedTextColor="@color/red"
        android:clickable="true"
        app:f_showAnimation="false"></dz.solc.viewtool.view.textview.FilletView>

    <dz.solc.viewtool.view.textview.FilletView
        android:layout_width="@dimen/len_100"
        android:layout_height="@dimen/len_30"
        android:layout_marginLeft="@dimen/len_10"
        android:layout_marginTop="@dimen/len_10"
        android:layout_marginRight="@dimen/len_10"
        android:gravity="center"
        android:clickable="true"
        android:text="菜单2"
        app:f_cornerRadius="@dimen/len_10"
        app:f_centor_drawable_left="@android:drawable/ic_delete"
        app:f_normalBgColor="@color/light_blue_200"
        app:f_normalTextColor="@color/black_alpha_224"
        app:f_pressedBgColor="@color/orange_50"
        app:f_pressedTextColor="@color/red"
        app:f_radius_type="f_left_top_radius"
        app:f_showAnimation="false"></dz.solc.viewtool.view.textview.FilletView>

    <dz.solc.viewtool.view.textview.FilletView
        android:layout_width="@dimen/len_100"
        android:layout_height="@dimen/len_30"
        android:clickable="true"
        android:enabled="true"
        android:layout_marginLeft="@dimen/len_10"
        android:layout_marginTop="@dimen/len_10"
        android:layout_marginRight="@dimen/len_10"
        android:gravity="center"
        android:text="菜单3"
        app:f_cornerRadius="@dimen/len_10"
        app:f_normalBgColor="@color/light_blue_200"
        app:f_normalTextColor="@color/black_alpha_224"
        app:f_pressedBgColor="@color/white_alpha_80"
        app:f_pressedTextColor="@color/red"
        app:f_radius_type="f_right_top_bootom_radius"
        app:f_showAnimation="true"></dz.solc.viewtool.view.textview.FilletView>



</LinearLayout>