<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dz.solc.myviews.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_timego"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="测试任意view倒计时" />

        <TextView
            android:id="@+id/tv_timestop"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/len_10"
            android:gravity="center_vertical"
            android:text="停止" />
    </LinearLayout>

    <dz.solc.viewtool.view.MarqueeView
        android:id="@+id/marqueeview"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Hello World!"
        app:mvTextColor="@android:color/holo_red_dark" />

    <dz.solc.viewtool.view.CountdownTextView
        android:id="@+id/countdowntextview"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <dz.solc.viewtool.view.ProgressWheel
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:barColor="@android:color/darker_gray"
        app:barWidth="10dp"
        app:circleColor="@android:color/holo_orange_dark"
        app:circlebarLength="20dp"
        app:delayMillis="20"
        app:radius="15dp"
        app:rimColor="@android:color/holo_red_dark"
        app:rimWidth="10dp"
        app:spinSpeed="10dp"
        app:text="双圆环"
        app:textSize="6sp"
        app:textcolorprogress="@color/colorPrimary" />

    <dz.solc.viewtool.view.RotateImageView
        android:id="@+id/riv_cycle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/ic_launcher_round" />

    <dz.solc.viewtool.view.RoundImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/bj" />

    <dz.solc.viewtool.view.RoundIconView
        android:id="@+id/riv_round"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/bj" />

    <RelativeLayout
        android:layout_width="@dimen/len_100"
        android:layout_height="@dimen/len_100"
        android:layout_marginTop="@dimen/len_10">

        <dz.solc.viewtool.view.CircleProgressBar
            android:id="@+id/circleProgressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:circleWidth="6dp"
            app:firstColor="#ff9800"
            app:progress="10"
            app:secondColor="#fce4ec"
            app:showText="false" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="98"
                android:textColor="@color/light_blue_200"
                android:textSize="@dimen/font_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综合得分"
                android:textColor="@color/red"
                android:textSize="@dimen/font_12" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
